{entity
	(include "/properties/car.ext")
	(include "/properties/shadow/tank.inc"  scale(1.0))
	(include "/properties/selection/vehicle.inc"  scale(1.1))
	{props "vehicle" "car" "truck" "wheeled" "turret" "with_gun" "zenite" "with_doors" "explosion_throw_crew"}
	(include "/properties/car_crew.ext")
	(include "/properties/dummy_fsm.inc")
	(include "/properties/structure/bedf_aa.ext")
	{PatherId "tank"}

	("crew_2_human")

	{volume "turret"
		{thickness 20}
	}
	{component "turret"
		{RepairTime 20}
		{Able {repair} {break_by_pierce}}
	}
	{volume "cabin"
		{tags "bodyback"}
		{component "bodyback"}
		{thickness 25}
	}
	{volume "bodyback"
		{thickness 25}
	}
	{volume "engine"
		{thickness 8}
	}
	{volume "shield_right"	
		{thickness 15}
	}
	{component "shield_right"	
		{RepairTime 10}
		{Able {repair} {break_by_pierce}}
	}
	{volume "shield_left"	
		{thickness 15}
	}
	{component "shield_left"	
		{RepairTime 10}
		{Able {repair} {break_by_pierce}}
	}
	{volume "gun"
		{thickness 10}
	}
	{component "gun"
		{RepairTime 15}
		{Able {repair} {break_by_pierce}}
	}

	{boarder
		{anm "driver"
			{forward	{begin	"board_big-midcar_driver"} {end "seat_driver_car"} {base "doorleft"}}
			{reverse 	{end	"board_big-midcar_driver" -1} {base "doorleft" -1}}
		}
		{anm "commander"
			{forward	{begin	"board_big-midcar"} {end "seat_passenger"} {base "doorright"}}
			{reverse 	{end	"board_big-midcar" -1} {base "doorright" -1}}
		}
		{anm "gunner"
			{forward	{begin	"board_body"} {end "seat_driver_car"}}
			{reverse 	{end	"emit_body" 1}}
		}
		{anm "charger"
			{forward	{begin	"board_body"} {end "seat_driver_car"}}
			{reverse 	{end	"emit_body" 1}}
		}
	}
 
	("crew_human" place(gunner)		bone(gunner)	door(emit4) animation(gunner))
	("crew_human" place(charger)		bone(charger)	door(emit3) animation(gunner))
        
	{placer
		{place "driver" {visor "driver"} {nouseVision} }
		{place "gunner" {visor "main"} {nouseVision} }
		{place "commander" {visor "main"} {nouseVision} }
		{place "charger" {visor "driver"} {nouseVision} }
	}

	{placer
		{place "driver" 	{group "crew"}}
		{place "gunner" 	{group "crew"}}
		{place "commander"	{group "crew"}}
		{place "charger"	{group "crew"}}
	}

	{Sensor
		{Visor "main"
			{vision "Visor_cannon"}
			{bone	"visor1"}
		}
		{Visor "driver"
			{vision "Visor_BTR"}
			{bone "visor2"}
		}
	}

	("wheel" args "wheelright1")
	("wheel" args "wheelleft1")
	("wheel" args "wheelright2")
	("wheel" args "wheelleft2")

	{Weaponry
		{place "gun"
			{DefaultWeapon "20mm_Oerlikon"}
			{RestoreIKAfterAim}
			{Mounted}
			{weapon {ammo "bullet20 zenite" 60}}
		}
	}  	
	{extender "inventory"
		{weapon "gun"
			{fixed}
		}
		{box
			{size 5 6}
			{item "bullet20 zenite" 600}
		}
	}
	{mass 8000}
	{Chassis
		{Locomotion
			{MaxSpeed	30	}		; максимальная скорость, kmph
			{StartTime	6	}		; время разгона до макс. скорости с 0, seconds
			{BrakeTime	2	}		; время торможения с макс. скорости до 0, seconds
			{StopTime	4	}		; время остановки после отключения двигателя с макс. скорости до 0, seconds
			{TurnRadius	7	}		; мин. радиус разворота, meter
			{Gears		0.35 0.5 0.7 1.0} ; передаточные коэф-ты коробки передач
			{RearGears	0.33 0.5}	; передаточные коэф-ты коробки передач
			{SteerOn	40}			; скорость поворота колес, градусов в секунду
			{SteerOff	40}         ; скорость возврата колес в исх. состояние, градусов в секунду
			{SplineRadius 1}		; ограничение радиуса поворота на сплайнах, метров
		}
	}
	{Extension "BedF_AA.mdl"}
}
