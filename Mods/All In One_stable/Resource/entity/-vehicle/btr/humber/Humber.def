{ArmoredCar
	(include "/properties/armoredcar.ext")
	(include "/properties/shadow/tank.inc"  scale(1.0))
	(include "/properties/selection/vehicle.inc"  scale(1.0))
	{props "vehicle" "armored_car" "tank" "turret" "zenite" "wheeled" "turret_rotator"}
	{PatherId "vehicle.small"}
	{extension "crew.ext"}	
	{volume "body1"
		{tags "body"}
		{component "body"}
		{thickness 14 0.3
			{front	14 0.5}
                        {top	8}
			{bottom	8}
		}
	}
	{volume "turret"
		{component "turret"}
		{tags "turret" "body"}
		{thickness 14
		    {rear 14}
                    {top   8}
		}
	}
	{volume "crew"
		{able {contact_ground 0}}
	}
	{component "turret"
		{RepairTime 20}
		{Able {repair} {break_by_pierce}}
	}

	{volume "engine"
		{thickness 10
			{rear	15}
		}
	}
	{Volume "Gun"
		{thickness 10}
	}
	{component "Gun"
		{RepairTime 20}
		{Able {repair} {break_by_pierce}}
	}
	{Weaponry
		{place "gun"
			{DefaultWeapon "15mm_BESA"}
			{RestoreIKAfterAim}
			{Mounted}
                        {weapon {ammo "ammo ptr" 40}}
		}
		{place "mgun"
			{DefaultWeapon "BESA"}
			{Mounted}
			{weapon {ammo "ammo mgun" 225}}
		}
	}  	
	{extender "inventory"
		{weapon "gun" {fixed}}
		{weapon "mgun"
			{mask "weapon mgun"}
		}
		{box
			{item  "ammo mgun" 800}
			{item "ammo ptr" 380}
		}
	}
	("wheel" args "wheelright1")
	("wheel" args "wheelleft1")
	("wheel" args "wheelright2")
	("wheel" args "wheelleft2")

	{mass 9000}
	{Chassis
          {speed
		{Slow	13}
		{Normal	20}
		{Fast	27	}
		}
		{Locomotion
			{MaxSpeed	27	}		; максимальная скорость, kmph
			{StartTime	6	}		; время разгона до макс. скорости с 0, seconds
			{BrakeTime	2	}		; время торможения с макс. скорости до 0, seconds
			{StopTime	4	}		; время остановки после отключения двигателя с макс. скорости до 0, seconds
			{TurnRadius	7	}		; мин. радиус разворота, meter
			{Gears		0.35 0.5 0.7 1.0} ; передаточные коэф-ты коробки передач
			{RearGears	0.33 0.5}	; передаточные коэф-ты коробки передач
			{SteerOn	40}			; скорость поворота колес, градусов в секунду
			{SteerOff	40}         ; скорость возврата колес в исх. состояние, градусов в секунду
			{SplineRadius 1}		; ограничение радиуса поворота на сплайнах, метров
		}
	}
	{Extension "Humber.mdl"}
}
