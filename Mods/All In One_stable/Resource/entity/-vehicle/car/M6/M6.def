{entity
	(include "/properties/car.ext")
	(include "/properties/shadow/tank.inc"  scale(0.9))
      (include "/properties/structure/car4x4_gun.ext")
	(include "/properties/selection/vehicle.inc"  scale(1.1))
	{mass 5000}
	{props "vehicle" "car" "wheeled" "with_doors" "light_turret" "with_gun" "explosion_throw_crew"}
	{props "emit_on_attack"}
	{PatherId "vehicle.small"}
	(include "/properties/car_crew.ext")

	{TexMods
 		{"ambush" "1"}
	}
	 {Sensor
		{Visor "crew"
		      {vision "Visor_cannon"}
                      {bone "visor1"}
		}
		{Visor "driver"
		      {vision "Visor_BTR"}
		      {bone "visor2"}
		}
	}

	{Volume "turret"
		{thickness 15}
	}
	{component "turret"
		{RepairTime 20}
		{Able {repair} {break_by_pierce}}
	}
	{Volume "gun"
		{thickness 15}
	}

	("crew_inside")
	{boarder
		{anm "driver"
    		{forward	{begin	"board_Dodge"} {end "seat_driver_car"}}
			{reverse 	{end	"board_Dodge" -1}}
		}
		{anm "commander"
			{forward	{begin	"board_Dodge"} {end "seat_passenger"}}
			{reverse 	{end	"board_Dodge" -1}}
		}
		{anm "passenger1"
			{forward	{begin	"board_Dodge_body"} {end "seat_passenger"}}   
			{reverse 	{end	"emit_body" 1}}
			}
		}

	("crew_human" place(driver)	door(emit1)	bone(driver)    animation(driver))
	("crew_human" place(commander)  door(emit1)	bone(commander) animation(commander))
	("crew_human" place(gunner)	door(emit2)	bone(gunner)	animation(passenger1))
	("crew_human" place(charger)	door(emit3)	bone(charger)   animation(passenger1))

	{placer
		{place "driver" {visor "driver"}}
		{place "gunner" {worker charger} {visor "main"}}
	}

	{placer
		{place "driver" 	{group "crew"}}
		{place "gunner" 	{group "crew"}}
		{place "commander"	{group "crew"}}
		{place "charger"	{group "crew"}}
	}

	("wheel" args "wheelright1")
	("wheel" args "wheelleft1")
	("wheel" args "wheelright2")
	("wheel" args "wheelleft2")

	{Weaponry
		{place "gun"
			{DefaultWeapon "37mm_m6"}
			{RestoreIKAfterAim}
			{Mounted}
                 {weapon {ammo "ammo bullet37 ap" 1}}
		}
	}
	{extender "inventory"
		{weapon "gun" {fixed}}
		{box
			{item "bullet37 ap" 44}
			{item "bullet37 fg" 32}
		      {item "plant" 5}
                }
	}
	{Chassis
		{Locomotion
			{MaxSpeed	35	}		; максимальная скорость, kmph
			{StartTime	6	}		; время разгона до макс. скорости с 0, seconds
			{BrakeTime	2	}		; время торможения с макс. скорости до 0, seconds
			{StopTime	4	}		; время остановки после отключения двигателя с макс. скорости до 0, seconds
			{TurnRadius	7	}		; мин. радиус разворота, meter
			{Gears		0.35 0.5 0.7 1.0} ; передаточные коэф-ты коробки передач
			{RearGears	0.33 0.5}	; передаточные коэф-ты коробки передач
			{SteerOn	40}			; скорость поворота колес, градусов в секунду
			{SteerOff	40}         ; скорость возврата колес в исх. состояние, градусов в секунду
			{SplineRadius 1}		; ограничение радиуса поворота на сплайнах, метров
		}
	}
	{Extension "M6.mdl"}
}
