{entity
	(include "/properties/car.ext")
	(include "/properties/shadow/tank.inc"  scale(1.0))
	(include "/properties/selection/vehicle.inc"  scale(1.1))
	{props "vehicle" "car" "truck" "wheeled" "with_doors"}
	{Props "emit_on_attack"}

      ("wheel" args "wheelright1")
	("wheel" args "wheelleft1")
	("wheel" args "wheelright2")
	("wheel" args "wheelleft2")

	("crew_2_human")
	("board_animation"
		place(commander)
		board_begin(board_big-highcar_driver)
		board_end(seat_driver_car)
		base(doorleft)
	)
	("board_animation"
		place(driver)
		board_begin(board_big-highcar)
		board_end(seat_passenger)
		base(doorright)
	)
	{boarder
		{anm "passenger"
			{forward	{begin	"board_body"} {end "seat_passenger"}}
			{reverse 	{end	"emit_body" 1}}
		}
	}

	("seat_inside")

	("crew_human" place(seat1)	bone(seat01)	door(emit4)	animation(passenger))
	("crew_human" place(seat2)	bone(seat02)	door(emit3)	animation(passenger))
	("crew_human" place(seat3)	bone(seat03)	door(emit4)	animation(passenger))
	("crew_human" place(seat4)	bone(seat04)	door(emit3)	animation(passenger))

 	("wheel" args "wheelright1")
	("wheel" args "wheelleft1")
	("wheel" args "wheelright2")
	("wheel" args "wheelleft2")

	{Volume "bodyback"
		{thickness 8}
	}

	{mass 8000}
	{Chassis
		{Locomotion
			{MaxSpeed	30	}		; максимальная скорость, kmph
			{StartTime	6	}		; время разгона до макс. скорости с 0, seconds
			{BrakeTime	2	}		; время торможения с макс. скорости до 0, seconds
			{StopTime	4	}		; время остановки после отключения двигателя с макс. скорости до 0, seconds
			{TurnRadius	7	}		; мин. радиус разворота, meter
			{Gears		0.35 0.5 0.7 1.0} ; передаточные коэф-ты коробки передач
			{RearGears	0.33 0.5}	; передаточные коэф-ты коробки передач
			{SteerOn	40}			; скорость поворота колес, градусов в секунду
			{SteerOff	40}         ; скорость возврата колес в исх. состояние, градусов в секунду
			{SplineRadius 1}		; ограничение радиуса поворота на сплайнах, метров
		}
	}
	{Extension "BedF-ammo.mdl"}

	(mod "mp"
		{extender "inventory"
			{box
				{clear}
			      {item "dynamite" 5 {cell 2 2}}
				{item "repair_kit" {cell 0 0}}
				{item "mine antitank" 30 {cell 4 0}}
				{item "mine antipersonnel" 60 {cell 0 2}}
                        {item "mine_detector" 5}
                        {item "molotov_coctail" 10 {cell 4 2}}
			}
		}
	)
}
