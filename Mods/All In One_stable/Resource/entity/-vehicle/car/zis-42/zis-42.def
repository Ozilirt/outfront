{entity
	(include "/properties/car.ext")
	(include "/properties/shadow/tank.inc"  scale(1.0))
	(include "/properties/selection/vehicle.inc"  scale(1.1))
	{props "vehicle" "car" "truck" "wheeled" "with_doors" "explosion_throw_crew"}
	{props "emit_on_attack"}
	{PatherId "tank"}	;проходимость из за траков
	{TexMods
		{"winter" "1"}
	}

	("crew_2_human")
	("board_animation"
		place(driver)
		board_begin(board_big-midcar_driver)
		board_end(seat_driver_car)
		base(doorleft)
	)
	("board_animation"
		place(commander)
		board_begin(board_big-midcar)
		board_end(seat_passenger)
		base(doorright)
	)
	("passenger_10_human_invisible")

	{boarder
		{anm "passenger"
			{forward	{begin	"board_body"} {end "seat_passenger"}}
			{reverse 	{end	"emit_body" 1}}
		}
	}


	("wheel" args "wheelright1")
	("wheel" args "wheelleft1")
	("tracks")

	{Volume "bodyback"
		{thickness 10}
	}
	{volume "body"
		{tags "body"}
		{component "body"}
		{thickness 15}   ; металл рама
	}
	{volume "engine"
		{thickness 10}
	}
	{volume "shield"	
		{thickness 15}
	}
	{component "shield"	
		{RepairTime 10}
		{Able {repair} {break_by_pierce}}
	}
	{component "engine"	
		{RepairTime 10}
		{Able {repair} {break_by_pierce}}
	}
	{mass 15000}
	{Chassis
		{Locomotion ("locomotion")}
	}
	{Chassis
	; left track must be first
   		{Track "left"
			{Tracer
				{View "tracks"}
				{Bone "FXtraceL2"}
				{Step 0.7}			; in meters
   		 	}
			{TextureScroller
			   	{Bone "TrackL"}
   		 		{Length 0.6}		; meters per animation
   		 	}
   		}
   		{Track "right"
			{Tracer 
			   	{View "tracks"}
   		 		{Bone "FXtraceR2"}
   		 		{Step 0.7}			; in meters
			}
			{TextureScroller
		    	{Bone "TrackR"}	
		 		{Length 0.6}		; meters per animation
	 		}
 		}
	}
	{Extension "ZIS-42.mdl"}

	(mod "mp"
		{extender "inventory"
			{box
				{clear}
		       	{item "dynamite" 5 {cell 2 2}}
				{item "repair_kit" {cell 0 0}}
				{item "mine antitank" 30 {cell 4 0}}
				{item "mine antipersonnel" 60 {cell 0 2}}
                        {item "mine_detector" 5}
                        {item "molotov_coctail" 10 {cell 4 2}}
			}
		}
	)
}

