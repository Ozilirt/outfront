{Entity
	(include "/properties/tank.ext")
	(include "/properties/shadow/tank.inc"  scale(1.3))
	(include "/properties/selection/vehicle.inc"  scale(1.2))
	{props "heavy" "turret_rotator" "huge" "turretmg"}
	{TexMods
		{"ambush" "1"}
	}

	{volume "body1"
		{tags "body"}
		{component "body"}
		{thickness 76
			{front  102}
			{rear 51 0.2}
			{bottom	13}
			{top    25}
		}   
	}
	{volume "body2"
		{tags "body"}
		{component "body"}
		{thickness 76
			{front  102}
			{rear 51 0.2}
			{bottom	13}
			{top    25}
		}  
	}
	{volume "turret"
		{thickness 76 0.5
			{front  114 0.5}        
			{top 25}
		}
	}
	{component "turret"
		{Able {repair} {break_by_pierce}}
		{RepairTime 75}
	}

	("crew_4_human")

	{boarder
		{anm "left"
			{forward	{begin	"board_tank_left"}}
			{reverse 	{end	"emit_tank_1_hold"}}
		}
		{anm "right"
			{forward	{begin	"board_tank_right"}}
			{reverse 	{end	"emit_tank_1_hold"}}
		}
		{anm "armor"
			{forward	{begin	"board_MiddleArmor"} 	{end "seat_armor"}}
			{reverse 	{end	"emit_tank_2_hold"}}
		}
		{anm "armor1"
			{forward	{begin	"board_MiddleArmor"} {end "seat_armor"}}
			{reverse 	{end	"emit_body"}}
		}
	}

	("seat_human" place(seat1) bone(seat01) door(emit3)  animation(armor1))
	("seat_human" place(seat2) bone(seat02) door(emit4)  animation(armor))
	("seat_human" place(seat3) bone(seat03) door(emit5)  animation(armor))
	("seat_human" place(seat4) bone(seat04) door(emit6)  animation(armor1))

	{Weaponry
		{place "gun"
			{DefaultWeapon "90mm_m3"}
			{Mounted}
			{weapon {ammo "ammo bullet90 ap" 1}}
		}
		{place "mgun"
			{DefaultWeapon "browning"}
			{Mounted}
			{weapon {ammo "ammo mgun" 200}}
		}
		{place "mgun2"
			{Rotate}
			{LinkBone "mgun2"}
			{LinkAnimation "on"}
			{DefaultWeapon "50cal_2"}
			{Mounted}
			{weapon {ammo "ammo mgun2" 110}}
		}
	}
	{extender "inventory"
		{weapon "gun" {fixed}}
		{weapon "mgun" {fixed}}
		{box
			{item "ammo mgun2" 330}
			{item "ammo mgun" 800}
			{item "ammo bullet90 ap" 34}
			{item "ammo bullet90 fg" 22}
		}
	}

	{mass 47500}
	{Chassis
		{track_size 0.6 0.7}
		{Locomotion ("locomotion")
			{MaxSpeed 	    15} ; максимальная скорость, kmph
			{StartTime 		 6} ; время разгона до макс. скорости с 0, seconds
			{BrakeTime 		0.6} ; время торможения с макс. скорости до 0, seconds
			{StopTime		 1} ; время остановки после отключения двигателя с макс. скорости до 0, seconds
			{TurnRadius     5} ; мин. радиус разворота, meter
			{TurnTime		5} ; время на разворот на 360 градусов при макс. скорости разворота, seconds
			{TurnStart		 2}	; время разгона до макс. угловой скорости с 0, seconds
			{TurnStop	   0.5}	; время остановки с макс. угловой скорости до 0, seconds
			{Gears 0.2 0.3 0.5 0.7 1.0} ; передаточные коэф-ты коробки передач
			{RearGears 0.2 0.5} ; передаточные коэф-ты коробки передач
		}
		{speed
			{Slow	    7 }
			{Normal   11 }
			{Fast	    15 } 
		}
		{FuelBag
			{volume 832 }	; liters
			{rate   517 }	; liters per kilometer
			{remain 832 }
			{fuel "fuel"}
		}
	}
	{Extension "m26Pershing.mdl"}

	(mod "mp"
		{sensor
			{Visor "main"
				{vision "Visor_Tank"}
			}
		}
	)
