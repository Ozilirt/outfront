{Entity
	(include "/properties/tank.ext")
	(include "/properties/shadow/tank.inc" scale(0.9))
	(include "/properties/selection/vehicle.inc" scale(1.2))
	{props "light" "average"}
	
	{Volume "Turret"
		{thickness  38
			{top		25}
			{bottom	25}
			{front	51}
			{rear	 	38}
			{left		38}
			{right	38}
		}
	}
	{Volume "Gun"
		{thickness 10}
	}
	{Volume "Body"
		{thickness  44
			{top		13}
			{bottom	13}
			{front	38 0.3}
			{rear	 	25}
			{left		25}
			{right	25}
		}
	}

	("crew_4_human")
	{boarder
		{anm "left"
			{forward	{begin	"board_tank_left"}}
			{reverse 	{end	"emit_tank_1_hold"}}
		}
		{anm "right"
			{forward	{begin	"board_tank_right"}}
			{reverse 	{end	"emit_tank_1_hold"}}
		}
		{anm "armor"
			{forward	{begin	"board_HighArmor"} 	{end "seat_armor"}}
			{reverse 	{end	"emit_tank_2"}}
		}
		{anm "armor1"
			{forward	{begin	"board_HighArmor"} {end "seat_armor"}}
			{reverse 	{end	"emit_body"}}
		}

	}
; BUG - Soldiers sitting on armor appear "inside-out"
; 	  Armour seating deactivated until fixed.
;	("seat_human" place(seat1) bone(seat01) door(emit3)  animation(armor1))
;	("seat_human" place(seat2) bone(seat02) door(emit4)  animation(armor))
;	("seat_human" place(seat3) bone(seat03) door(emit5)  animation(armor1))
;	("seat_human" place(seat4) bone(seat04) door(emit6)  animation(armor1))
;	("seat_human" place(seat5) bone(seat05) door(emit7)  animation(armor))
;	("seat_human" place(seat6) bone(seat06) door(emit8)  animation(armor1))

	{Weaponry
		{place "gun"
			{DefaultWeapon "37mm_m6"}
			{Mounted}
			{weapon {ammo "ammo bullet37 ap" 1}}
		}
		{place "mgun"
			{LinkBone "mgun"}
			;{LinkAnimation "off"}
			{DefaultWeapon "browning"}
			{Mounted}
			{weapon {ammo "ammo mgun" 200}}
		}
            {place "mgun2"
			{Rotate}
			{DefaultWeapon "browning_2"}
			{Mounted}
			{weapon {ammo "ammo mgun" 200}}
		}

	}
	{extender "inventory"
		{weapon "gun" {fixed}}
		{box
			{item "ammo mgun" 600}
                  {item "ammo bullet37 ap" 56}
		}
	}
	
	{mass 12700}
	{Chassis
		{track_size 0.6 0.7}
		{Locomotion 
			{MaxSpeed 	    26} ; максимальная скорость, kmph
			{StartTime 		10} ; время разгона до макс. скорости с 0, seconds
			{BrakeTime 		2} ; время торможения с макс. скорости до 0, seconds
			{StopTime		 1} ; время остановки после отключения двигателя с макс. скорости до 0, seconds
			{TurnRadius     5} ; мин. радиус разворота, meter
			{TurnTime		5} ; время на разворот на 360 градусов при макс. скорости разворота, seconds
			{TurnStart		 2}	; время разгона до макс. угловой скорости с 0, seconds
			{TurnStop	   0.5}	; время остановки с макс. угловой скорости до 0, seconds
			{Gears 0.2 0.3 0.5 0.7 1.0} ; передаточные коэф-ты коробки передач
			{RearGears 0.2 0.5} ; передаточные коэф-ты коробки передач
		}
	}
	{Extension "m3stuart.mdl"}

(mod "mp"
		{sensor
			{Visor "main"
				{vision "Visor_Tank"}
			}
		}
            {Chassis
			{speed
				{Slow	11	}	; km/h
				{Normal	16	}
				{Fast	26	}
			}
   {FuelBag
          {volume 245 }	; liters
	    {rate   184 }   	; liters per kilometer
	    {remain 245 }
          {fuel "fuel"}
        }

			{Locomotion ("locomotion")
				{MaxSpeed 26}
			}
		}

	)

}