{entity
	(include "/properties/tank.ext")
	(include "/properties/shadow/tank.inc" scale(1.0))
	(include "/properties/selection/vehicle.inc" scale(1.2))
	{props "light" "turret" "zenite" "light_turret" "low"}
	{TexMods
		{"ambush" "1"}
		{"ambush2" "2"}
		{"n116" "3"}
		{"winter" "4"}
	}

	{volume "body1"
		{tags "body"}
		{component "body"}
		{thickness 25
			{front	35 0.2}
			{rear	25 0.25}
			{bottom	10}
			{top	 10}
		}
	}
	{volume "body2"
		{tags "body"}
		{component "body"}
		{thickness 25
			{front	35 0.2}
			{rear	25 0.5}
			{bottom	10}
			{top	 10}
		}
	}
	{volume "body3"
		{tags "body"}
		{component "body"}
		{thickness 25
			{top	 10 0.7}
			{front	35 0.2}
			{bottom	10}
		}
	}
	{volume "turret"
		{thickness 25 0.2
			{front  20} 
			{top	10}
			{bottom	10}
		}
	}
	{Volume "lamp1"
		{thickness 2}
	}

	{boarder
		{anm "left"
			{forward	{begin	"board_tank_left"}}
			{reverse 	{end	"emit_tank_1_hold"}}
		}
		{anm "right"
			{forward	{begin	"board_tank_right"}}
			{reverse 	{end	"emit_tank_1_hold"}}
		}
		{anm "armor"
			{forward	{begin	"board_LowArmor"} 	{end "seat_armor"}}
			{reverse 	{end	"emit_tank_1"}}
		}
	}
	("crew_human" 			place(driver)		door1(emit1) door2(emit2) visor(driver))
	("crew_human" 			place(gunner)		door1(emit1) door2(emit2) visor(main))

	{placer
		{place "driver" {visor "driver"}}
		{place "gunner" {worker charger} {visor "main"}}
	}

	{placer
		{place "driver" 	{group "crew"}}
		{place "gunner" 	{group "crew"}}
	}
	("seat_human" place(seat1) bone(seat01) door(emit3)  animation(armor))
	("seat_human" place(seat2) bone(seat02) door(emit3)  animation(armor))

	{Weaponry
		{place "gun"
			{DefaultWeapon "20mm_TNSH"}
			{Mounted}
                  {weapon {ammo "ammo bullet20 ap" 50}}
		}
		{place "mgun"
			{DefaultWeapon "weapon dt"}
			{Mounted}
			{weapon {ammo "ammo mgun" 63}}
		}
	}
	{extender "inventory"
		{weapon "gun" {fixed}}
		{weapon "mgun" {fixed}}
		{box
			{item "ammo mgun" 600}
			{item "ammo bullet20 ap" 380}
		}
	}
	{extender "light"
		{lightfx "light_boat"}
		{breakfx "glass_hit"}
		{lamp "1" off}
	}
	
	{mass 8400}
	{Chassis
		{track_size 0.6 0.7}
		{Locomotion
			{MaxSpeed 	    24} ; максимальная скорость, kmph
			{StartTime 		10} ; время разгона до макс. скорости с 0, seconds
			{BrakeTime 		2} ; время торможения с макс. скорости до 0, seconds
			{StopTime		 1} ; время остановки после отключения двигателя с макс. скорости до 0, seconds
			{TurnRadius     5} ; мин. радиус разворота, meter
			{TurnTime		5} ; время на разворот на 360 градусов при макс. скорости разворота, seconds
			{TurnStart		 2}	; время разгона до макс. угловой скорости с 0, seconds
			{TurnStop	   0.5}	; время остановки с макс. угловой скорости до 0, seconds
			{Gears 0.2 0.3 0.5 0.7 1.0} ; передаточные коэф-ты коробки передач
			{RearGears 0.2 0.5} ; передаточные коэф-ты коробки передач
		}
		{FuelBag
			{volume 320 }	; liters
			{rate   120 }   	; liters per kilometer
			{remain 320 }
			{fuel "fuel"}
		}
	}
	{Extension "T-60.mdl"}
	(mod "mp"
		{sensor
			{Visor "main"
				{vision "Visor_Tank"}
			}
		}
	)
}

