{Entity
	(include "/properties/tank.ext")
	(include "/properties/structure/tank_m24.ext")
	(include "/properties/shadow/tank.inc"  scale(1.1))
	(include "/properties/selection/vehicle.inc"  scale(1.2))
	{props "light"}
	
	{TexMods
		{"ambush1" "1"}
	}
	
	{volume "body"
		{tags "body"}
		{component "body"}
		{thickness 20
		    {front  38}
			{top	10}
			{bottom	10}
			{rear   10}
		}   
	}
	{volume "turret"
		{thickness 20 0.3
			{front  38}
			{top	10}
			{bottom	10}
			{rear   10}
		}
	}
	 
	
	("crew_4_human")

	{boarder
		{anm "left"
			{forward	{begin	"board_cromwell"}}
			{reverse 	{end	"emit_tank_1_hold"}}
		}
		{anm "right"
			{forward	{begin	"board_cromwell"}}
			{reverse 	{end	"emit_tank_1_hold"}}
		}
		{anm "armor"
			{forward	{begin	"board_MiddleArmor"} 	{end "seat_armor"}}
			{reverse 	{end	"emit_body"}}
		}
	}

	("seat_human" place(seat1) bone(seat01) door(emit3)  animation(armor))
	("seat_human" place(seat2) bone(seat02) door(emit4)  animation(armor))

	{Weaponry
		{place "gun"
			{DefaultWeapon "75mm_m6"}
			{Mounted}
		}
		{place "mgun"
			{DefaultWeapon "browning"}
			{Mounted}
		}
	}
	{extender "inventory"
		{weapon "gun" {fixed}}
		{box
			{item "ammo mgun" 600}
			{item "ammo bullet75 ap" 50}
			{item "ammo bullet75 fg" 27}
		}
	}
	
	{mass 19500}
	{Chassis
		{track_size 0.6 0.7}
		{Locomotion 
			{MaxSpeed 	    18} ; максимальная скорость, kmph
			{StartTime 		10} ; время разгона до макс. скорости с 0, seconds
			{BrakeTime 		2} ; время торможения с макс. скорости до 0, seconds
			{StopTime		 1} ; время остановки после отключения двигателя с макс. скорости до 0, seconds
			{TurnRadius     5} ; мин. радиус разворота, meter
			{TurnTime		5} ; время на разворот на 360 градусов при макс. скорости разворота, seconds
			{TurnStart		 2}	; время разгона до макс. угловой скорости с 0, seconds
			{TurnStop	   0.5}	; время остановки с макс. угловой скорости до 0, seconds
			{Gears 0.2 0.3 0.5 0.7 1.0} ; передаточные коэф-ты коробки передач
			{RearGears 0.2 0.5} ; передаточные коэф-ты коробки передач
		}
	}
	{Extension "chaffee.mdl"}
}
