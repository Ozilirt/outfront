{actor
	(include "/properties/railway.ext")
	(include "/properties/shadow/marine.inc"  scaleX(2.0) scaleY(1.0))
	(include "/properties/car_crew.ext")
    {mass 5000}
	{Chassis
		{Locomotion ("locomotion")
			{MaxSpeed	20	}		; максимальная скорость, kmph
			{StartTime	3	}		; время разгона до макс. скорости с 0, seconds
			{BrakeTime	3	}		; время торможения с макс. скорости до 0, seconds
		}
	}
	{Extension "tramway.mdl"}

	{props "vehicle" "steel" "windowed" "car"}

